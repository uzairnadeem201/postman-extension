{
  "manifest_version": 3,
  "name": "XHR & Fetch Request Viewer",
  "version": "1.0",
  "description": "Capture and view XHR/Fetch requests from the active tab.",
  "permissions": ["webRequest", "storage", "tabs","scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type":"module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "XHR & Fetch Request Viewer"
  }
}
